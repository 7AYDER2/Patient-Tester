// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id       Int       @id @default(autoincrement())
  name     String
  email    String
  password String
  image    String?
  patient  Patient[]
}

model Patient {
  id            Int       @id @default(autoincrement())
  name          String
  gender        String
  maritalStatus String?
  birthDate     DateTime
  address       String
  phoneNumber   String
  bloodType     String?
  smoker        String
  alcohole      String
  Doctor        Doctor?   @relation(fields: [doctorId], references: [id])
  doctorId      Int?
  results       results[]
}

model Test {
  id      Int       @id @default(autoincrement())
  name    String
  price   String
  unit    String
  min     Float
  max     Float
  results results[]
}

model results {
  id        Int     @id @default(autoincrement())
  patient   Patient @relation(fields: [patientId], references: [id])
  patientId Int

  test   Test @relation(fields: [testId], references: [id])
  testId Int
}
